                            <option value="Com humor">Com humor</option>
                            <option value="Em tom formal">Em tom formal</option>
                            <option value="Em tom informal">Em tom informal</option>
                            <option value="De forma persuasiva">De forma persuasiva</option>
                            <option value="Em tom motivacional">Em tom motivacional</option>
                            <option value="Em tom descritivo">Em tom descritivo</option>
                            <option value="Em tom acadêmico">Em tom acadêmico</option>
